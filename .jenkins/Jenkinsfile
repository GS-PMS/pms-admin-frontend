pipeline {
    agent any

    environment {
        DOCKER_HUB_REPO = 'salmawaleedd'
        SERVICE_NAME = 'pms-admin-frontend'
        IMAGE_TAG = "${BUILD_NUMBER}"
    }

    stages {

         stage('üîç Debug Info') {
                    steps {
                        script {
                            echo "DEBUG: BRANCH_NAME='${env.BRANCH_NAME}'"
                            echo "DEBUG: CHANGE_ID='${env.CHANGE_ID}'"
                            echo "DEBUG: GIT_BRANCH='${env.GIT_BRANCH}'"
                        }
                    }
         }
        stage('üö® Validate Push Method') {
            when {
                branch 'main'
            }
            steps {
                script {
                    if (!env.CHANGE_ID) {
                        def committer = sh(
                            script: 'git log -1 --pretty=format:"%an"',
                            returnStdout: true
                        ).trim()

                        error("""
                        ‚ùå‚ùå‚ùå DIRECT PUSH TO MAIN BLOCKED ‚ùå‚ùå‚ùå

                        Committer: ${committer}

                        ‚ö†Ô∏è  VIOLATION: Direct pushes to 'main' are prohibited.

                        Required workflow:
                        1. git checkout -b feature/your-feature
                        2. Make changes and commit
                        3. git push origin feature/your-feature
                        4. Create Pull Request on GitHub
                        5. Get code review approval
                        6. Merge via Pull Request

                        Your code reached main but won't be deployed.
                        Revert with: git revert HEAD
                        """)
                    } else {
                        echo "‚úÖ Valid: This build is from Pull Request #${env.CHANGE_ID}"
                    }
                }
            }
        }

        stage('Checkout Code') {
            steps {
                echo "=== Checking out ${SERVICE_NAME} ==="
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                echo "=== Installing npm dependencies ==="
                sh 'npm ci'
            }
        }

        stage('Build Application') {
            steps {
                echo "=== Building ${SERVICE_NAME} ==="
                sh 'npm run build'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "=== Building Docker image ==="
                    sh """
                        docker build -t ${DOCKER_HUB_REPO}/${SERVICE_NAME}:${IMAGE_TAG} .
                        docker tag ${DOCKER_HUB_REPO}/${SERVICE_NAME}:${IMAGE_TAG} ${DOCKER_HUB_REPO}/${SERVICE_NAME}:latest
                    """
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    echo "=== Pushing to Docker Hub ==="
                    withCredentials([usernamePassword(
                        credentialsId: 'dockerhub-credentials',
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DOCKER_PASS'
                    )]) {
                        sh """
                            echo \$DOCKER_PASS | docker login -u \$DOCKER_USER --password-stdin
                            docker push ${DOCKER_HUB_REPO}/${SERVICE_NAME}:${IMAGE_TAG}
                            docker push ${DOCKER_HUB_REPO}/${SERVICE_NAME}:latest
                        """
                    }
                }
            }
        }
    }

    post {
        always {
            echo "=== Cleaning up ==="
            sh 'docker logout'
            sh 'docker image prune -f'
        }

        success {
            echo "‚úÖ ${SERVICE_NAME} pipeline completed successfully!"
        }

        failure {
            echo "‚ùå ${SERVICE_NAME} pipeline failed!"
        }
    }
}
